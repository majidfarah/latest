    <Label fx:id="outputLabel" text="Placeholder" style="-fx-font-size: 18px"/>

<!--Top control bar -->

<HBox alignment="CENTER" spacing="30">
    <Button fx:id="importJsonButton" onAction="#jsonInput" text="Import File" />
